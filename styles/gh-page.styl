link-color = #cf6c0a;
visited-color = #7c579e;
hover-color = #ff6900;
noise = url('../img/noise.png');

body {
	background:#f9970d;
	background:noise, #f9970d url(http://a2.twimg.com/profile_background_images/59670795/twitter-sapegin-background.png) repeat-x top center;
	color:#111;
	line-height:1.4;
	padding:0 spacer;
}

.wrapper {
	position:relative;
	margin:2*spacer auto 2*spacer;
	max-width:1000px;
	background:#fff;
	padding:15px 2*spacer 2*spacer;
	box-shadow:0 5px 10px black(.4);
}

// Fonts

* { font-family:Calibri, "Trebuchet MS", "Helvetica Neue", Tahoma, sans-serif; }
h1, h2 { font-family: Corbel, Verdana, Geneva, sans-serif; }
pre, code, pre span { font-family: Consolas, "Lucida Console", Monaco, "Courier New", Courier, monospace; }


// Links

a {
	text-decoration:underline;
	transition:border .1s ease-in-out, color .2s ease-in-out, background .2s ease-in-out;
}
a.fake {
	text-decoration:none;
	border-bottom:1px dotted;
}
a:link, nav a:visited, a.fake:visited {
	color:link-color;
}
a:visited {
	color:visited-color;
}
a:hover, a:active, a:focus, nav a:hover, nav a:active, nav a:focus, a.fake:hover, a.fake:active, a.fake:focus {
	color:hover-color;
}
a:active {
	position:relative;
	top:1px;
}


// Text selection
text-selection(#000, #faedb1);

// iOS tap highlighting: j.mp/webkit-tap-highlight-color
a:link {
	-webkit-tap-highlight-color:#ff5e99;
}


// Layout helpers
.halves {
	equal-columns(2)
}
.thirds {
	equal-columns(3)
}
.quarters {
	equal-columns(4)
}


// Page elements

h1 {
	font-size:48px;
	margin:0;
	line-height:1;
	font-weight:normal;
	letter-spacing:-.2px;
	text-shadow:0 1px 4px black(.2);
}
h2, h3 {
	line-height:40px;
	margin:16px 0 0;
	font-weight:normal;
	letter-spacing:-.2px;
}
h2 {
	font-size:24px;
}
h3 {
	font-size:22px;
	font-style:italic;
	text-align:center;
}


// Code

p, pre {
	margin:0 0 .5em;
}
pre code {
	font-size:14px;
	overflow:auto;
	border-radius:1px;
}
.indent {
	display:inline-block;
	width:2em;
}

pre code::-webkit-scrollbar {
	width:9px;
	height:9px;
}
pre code::-webkit-scrollbar-track-piece {
	background:white(.2);
}
pre code::-webkit-scrollbar-thumb {
	background:white(.6);
	border-radius:8px;
}

// GitHub page elements

.forkme {
	position:absolute;
	top:0;
	right:0;
	width:149px;
	height:149px;
	z-index:999;
	overflow:hidden;
	text-indent:100%;
	font:0/0 a;
	background:url(http://s3.amazonaws.com/github/ribbons/forkme_right_darkblue_121621.png);
}
@media (max-width:1150px) {
	.forkme {
		display:none;
	}
}
.download {
	float:right;
}
.subtitle {
	font-size:19px;
	margin:5px 0 1em 0;
	font-style:italic;
}
.footer {
	text-align:center;
	padding-top:40px;
	font-style:italic;
}
.octocat, .octocat a {
	display:block;
	width:69px;
	height:49px;
	transition: all .2s cubic-bezier(0.230, 1.000, 0.320, 1.000);
}
.octocat {
	background:url(http://sapegin.github.com/img/octocat-mask.png) no-repeat;
	position:absolute;
	bottom:5px;
	right:0;
	opacity:.5;
}
.octocat:hover {
	opacity:1;
}
.octocat a {
	background:url(http://sapegin.github.com/img/octocat.png) no-repeat;
	text-indent:-9999px;
	opacity:0;
}
.octocat a:hover {
	opacity:1;
}
@media (max-width:1150px) {
	.octocat {
		display:none;
	}
}

// Code
.code {
	margin:2*spacer (-(2*spacer));
	padding:spacer 2*spacer;

	&-i {
		font-size:12px;
		white-space:pre;
		tab-size:4;
	}

	pre .coffeescript .javascript,
	pre .javascript .xml,
	pre .tex .formula,
	pre .xml .javascript,
	pre .xml .vbscript,
	pre .xml .css,
	pre .xml .cdata {
	    opacity:.65;
	}
}
.code,
.code pre code {
	background:#f5f2f0;
}


// Download row
.download-row {
	margin-bottom:spacer*3;

	&__links {
		margin-bottom:spacer;
		.button {
			margin-right:.2em;
		}
	}
	&__descr {
		font-size:13px;
	}
}


// Button
.button,
.button:link,
.button:visited {
	padding:5px 15px;
	background:#ff6d00;
	background:noise, linear-gradient(top, #ffcc00, #ff6d00);
	border-radius:35px;
	color:#fff;
	color:white(.97);
	font-size:28px;
	text-decoration:none;
	text-shadow:0 -1px 1px black(.5);
	box-shadow:inset 0 1px 0 white(.6),
		inset 0 2px 8px white(.7),
		inset 0 -2px 4px black(.1),
		0 -1px 0 hsla(41,90%,45%,.95),
		0 1px 0 hsla(20,100%,30%,.95),
		0 2px 4px black(.1);
}
.button:hover,
.button:focus {
	background:#ff7c1a;
	background:noise, linear-gradient(top, #ffd739, #ff7c1a);
	color:#fff;
	box-shadow:inset 0 1px 0 white(.6),
		inset 0 2px 8px white(.7),
		inset 0 -2px 4px black(.1),
		0 -1px 0 hsla(41,90%,45%,.8),
		0 1px 0 hsla(20,100%,30%,.8),
		0 2px 4px black(.1);
	outline:0;
}
.button:active {
	padding:6px 15px 4px;
	background:#faa643;
	background:noise, linear-gradient(top, #ff7c1a, #faa643);
	color:white(.93);
	text-shadow:0 -1px 0 black(.4);
	box-shadow:0 -1px 0 hsla(20,100%,30%,.8),
		inset 0 -2px 1px white(.1),
		inset 0 -1px 0 hsla(41,90%,25%,.2),
		inset 0 2px 7px black(.3),
		0 1px 1px black(.1);
}

.share {
	margin-bottom:spacer;

	.social-likes__button {
		font-style:normal;
	}
}


// GitHub star button
.social-likes__button_github,
.social-likes__button_github:link,
.social-likes__button_github:visited {
	padding-left:19px;
	background:#e6e6e6;
	background:linear-gradient(top, #fafafa, #eaeaea);
	color:#555;
	border-color:#d4d4d4;
	border-bottom-color:#bcbcbc;
	text-decoration:none;
}
.social-likes__button_github:hover {
	background:#efefef;
	background:linear-gradient(top, #fff, #f0f0f0);
	color:#555;
	border-color:#d4d4d4;
	border-bottom-color:#bcbcbc;
}
.social-likes__icon_github {
	background-image:embedurl('../img/github.png');
	background-position:3px 3px;
}
.social-likes__counter_github {
	background:#fafafa;
	border-color:#d4d4d4;
}
.social-likes__counter_github:after {
	border-right-color:#d4d4d4;
}
